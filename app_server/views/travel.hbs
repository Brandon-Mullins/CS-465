{{!< layouts/main}}

<section class="travel-page">
  <h1>Travel Packages</h1>

  {{#if trips}}
    <ul class="trip-list">
      {{#each trips}}
        <li class="trip-card">
          <img class="trip-img" src="{{image}}" alt="{{title}}">
          <div class="trip-info">
            <h2 class="trip-title">{{title}}</h2>
            <p class="trip-meta">From ${{price}} • Starts {{start}} • {{nights}} nights</p>
          </div>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>No trips available.</p>
  {{/if}}
</section>
